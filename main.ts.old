import { App, Plugin, PluginSettingTab, Setting } from 'obsidian';

interface BacklinkerSettings {
	mySetting: string;
}

const DEFAULT_SETTINGS: BacklinkerSettings = {
	mySetting: 'default'
}

export default class BacklinkerPlugin extends Plugin {
	settings: BacklinkerSettings;

	async onload() {
		await this.loadSettings();

		// This creates an icon in the left ribbon.
		const ribbonIconEl = this.addRibbonIcon('dice', 'Backlinker', (evt: MouseEvent) => {
			// Called when the user clicks the icon.
			console.log('Backlinker icon clicked');
		});
		ribbonIconEl.addClass('backlinker-ribbon-class');

		// This adds a simple command that can be triggered anywhere
		this.addCommand({
			id: 'open-backlinker',
			name: 'Open Backlinker',
			callback: () => {
				console.log('Backlinker command triggered');
			}
		});

		// This adds a settings tab so the user can configure various aspects of the plugin
		this.addSettingTab(new BacklinkerSettingTab(this.app, this));
	}

	onunload() {
		console.log('Unloading Backlinker plugin');
	}

	async loadSettings() {
		this.settings = Object.assign({}, DEFAULT_SETTINGS, await this.loadData());
	}

	async saveSettings() {
		await this.saveData(this.settings);
	}
}

class BacklinkerSettingTab extends PluginSettingTab {
	plugin: BacklinkerPlugin;

	constructor(app: App, plugin: BacklinkerPlugin) {
		super(app, plugin);
		this.plugin = plugin;
	}

	display(): void {
		const {containerEl} = this;

		containerEl.empty();

		new Setting(containerEl)
			.setName('Setting #1')
			.setDesc('It\'s a secret')
			.addText(text => text
				.setPlaceholder('Enter your secret')
				.setValue(this.plugin.settings.mySetting)
				.onChange(async (value) => {
					this.plugin.settings.mySetting = value;
					await this.plugin.saveSettings();
				}));
	}
}
